@model IEnumerable<Book>

@{
	ViewData["Title"] = "List of Books";
}

<style>
    .book-card {
        
        
        padding: 10px;
        width: fit-content;
        display: inline-block;
        margin: 5px;
        background-color: white;
        box-shadow: rgba(17, 17, 26, 0.1) 0px 1px 0px;
    }

    .book-card:hover {
            box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
    }

        .book-card img {
            width: 100%;
            height: auto;
            border-radius: 5px;
            margin-bottom: 10px;
        }

        .book-card img:hover {
            cursor: pointer;
        }  
        
        .book-card h2 {
            font-size: 16px;
            margin-bottom: 5px;
            overflow: hidden;
            display: -webkit-box;
            -webkit-line-clamp: 2; /* number of lines to show */
            line-clamp: 2;
            -webkit-box-orient: vertical;
        }

        .book-card h2:hover {
            cursor: pointer;
        }

        .book-card p {
            margin: 0;
            color: grey;
        }

        .book-card button {
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin-top: 10px;
            cursor: pointer;
        }
</style>
<div class="row align-items-start">
	@foreach (var item in Model)
	{
		<div class="col-md-3 col-xs-12 col-lg-2 col-sm-4">
						<div class="book-card">
                            <img src="@item.CoverURL" alt="@item.Title">
							<h2>@item.Title</h2>
							<p>@item.Author.FullName</p>
							<p>Price: @item.Price.ToString("c")</p>
                            <button><i class="bi bi-cart"></i> Add</button>
						</div>

		</div>
	}
</div>